<div class="content">
    <div class="headers_wrapper"><a href="{{ path('bloggerblog_blogArticle',{'blog_name':blog_info.address,'article_name' : article.article_address}) }}">{{ article.article_title }}</a></div>
    <div class="content_in">
        <div class="article_body">{{ article.article_body | raw }}</div>
        <div class="article_readmore"><a class="btn btn-info" href="{{ path('bloggerblog_blogArticle',{'blog_name':blog_info.address,'article_name' : article.article_address}) }}">ادامه مطلب</a></div>
        <div class="article_info">
            <div class="article_date">تاریخ آخرین ویرایش: {{ article.article_date|date("Y/m/d") }}</div>
            <div class="article_comment_count">تعداد نظرات: {{ article.article_comment_count }}</div>
        </div>
    </div>
</div>