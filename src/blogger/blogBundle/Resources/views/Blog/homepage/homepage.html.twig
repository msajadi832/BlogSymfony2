{% extends "bloggerblogBundle:Blog:blogBase.html.twig" %}
{% block sidebar %}
    {% for recent_comment in recent_comments %}
        {{ include(
        '@bloggerblog/Blog/recent_comment/recentComment.twig',
        { 'recent_comment': recent_comment }
        ) }}
    {% endfor %}
{% endblock %}
{% block content %}
    {% for article in articles %}
        {{ include(
        '@bloggerblog/Blog/homepage/content_readmore.html.twig',
        { 'article': article }
        ) }}
    {% endfor %}
{% endblock %}