{% extends "bloggerblogBundle:Blog:blogBase.html.twig" %}
{% block sidebar %}
    {{ include(
    '@bloggerblog/Blog/sidebar/descriptionArticle.html.twig'
    ) }}
    {{ include(
    '@bloggerblog/Blog/sidebar/recentComment.html.twig',
    { 'recent_comments': recent_comments }
    ) }}
{% endblock %}
{% block content %}
    {% if articles is not empty %}
    {% for article in articles %}
        {{ include(
        '@bloggerblog/Blog/homepage/content_readmore.html.twig',
        { 'article': article }
        ) }}
    {% endfor %}
    {% else %}
        <div class="content">
            <div class="headers_wrapper">بدون مطلب</div>
            <div class="content_in">
                <div class="article_body">وبلاگ بدون مطلب است!!</div>
            </div>
        </div>
    {% endif %}
    {% if pagination.count > 1 %}
        <div class="pagination pagination-centered">
            <ul>
                {% if pagination.current <  pagination.count %}
                    <li><a href="{{ path('bloggerblog_blogHomepage',{'blog_name': blog_info.address,'start': pagination.count}) }}">پایان</a></li>
                    <li><a href="{{ path('bloggerblog_blogHomepage',{'blog_name': blog_info.address,'start': pagination.current+1}) }}">بعدی</a></li>
                {% endif %}
                {% for i in pagination.count..1 %}
                    {% if i == pagination.current %}
                        <li class="active"><a href="{{ path('bloggerblog_blogHomepage',{'blog_name': blog_info.address,'start': i}) }}">{{ i }}</a></li>
                    {% else %}
                        <li><a href="{{ path('bloggerblog_blogHomepage',{'blog_name': blog_info.address,'start': i}) }}">{{ i }}</a></li>
                    {% endif %}
                {% endfor %}
                {% if pagination.current > 1 %}
                    <li><a href="{{ path('bloggerblog_blogHomepage',{'blog_name': blog_info.address,'start': pagination.current-1}) }}">قبلی</a></li>
                    <li><a href="{{ path('bloggerblog_blogHomepage',{'blog_name': blog_info.address,'start': 1}) }}">شروع</a></li>
                {% endif %}
            </ul>
        </div>
    {% endif %}
{% endblock %}